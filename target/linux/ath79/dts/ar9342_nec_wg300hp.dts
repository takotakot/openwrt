/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "ar9344.dtsi"

/ {
	compatible = "nec,wg300hp", "qca,ar9344";
	model = "NEC Aterm WG300HP";

	chosen {
		bootargs = "console=ttyS0,9600";
	};

	aliases {
		led-boot = &led_power_green;
		led-failsafe = &led_power_red;
		led-running = &led_power_green;
		led-upgrade = &led_power_green;
	};

	leds {
		compatible = "gpio-leds";

		led_power_green: power_green {
			label = "wg300hp:green:power";
			gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		led_power_red: power_red {
			label = "wg300hp:red:power";
			gpios = <&gpio 3 GPIO_ACTIVE_LOW>;
		};

		active_green {
			label = "wg300hp:green:active";
			gpios = <&gpio 17 GPIO_ACTIVE_LOW>;
		};

		active_red {
			label = "wg300hp:red:active";
			gpios = <&gpio 4 GPIO_ACTIVE_LOW>;
		};

		air {
			label = "wg300hp:green:air";
			gpios = <&gpio 13 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "phy0tpt";
		};
	};

	keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&jtag_disable_pins>;

		reset {
			label = "reset";
			gpios = <&gpio 0 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
			debounce-interval = <60>;
		};

		eco {
			label = "eco";
			gpios = <&gpio 1 GPIO_ACTIVE_LOW>;
			linux,code = <BTN_0>;
			debounce-interval = <60>;
		};

		wps {
			label = "wps";
			gpios = <&gpio 2 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
			debounce-interval = <60>;
		};
	};

	reg_usb_vbus: regulator {
		compatible = "regulator-fixed";

		regulator-name = "usb-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;

		gpio = <&gpio 12 GPIO_ACTIVE_HIGH>;
		enable-active-high;

		regulator-always-on;
	};
};

&ref {
	clock-frequency = <40000000>;
};

&spi {
	num-cs = <1>;
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			/*
			 * OEM bootloader cannot boot OpenWrt from the flash,
			 * need to replace the bootloader to u-boot at the first
			 */
			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x020000>;
			};

			/* no compatibility with u-boot */
			config: partition@20000 {
				label = "config";
				reg = <0x020000 0x010000>;
				read-only;
			};

			art: partition@30000 {
				label = "art";
				reg = <0x030000 0x010000>;
				read-only;
			};

			partition@40000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x040000 0x3c0000>;
			};
		};
	};
};

&mdio0 {
	status = "okay";

	phy0: ethernet-phy@0 {
		reg = <0>;

		qca,ar8327-initvals = <
			0x04 0x07a00000 /* PORT0 PAD MODE CTRL */
			0x50 0xcf37cf37 /* LED_CTRL0 */
			0x54 0x00000000 /* LED_CTRL1 */
			0x58 0x00000000 /* LED_CTRL2 */
			0x5c 0x03ffff00 /* LED_CTRL3 */
			0x7c 0x0000007e /* PORT0_STATUS */
		>;
	};
};

&eth0 {
	status = "okay";

	pll-data = <0x06000000 0x00000101 0x00001616>;

	phy-mode = "rgmii";
	phy-handle = <&phy0>;

	mtd-mac-address = <&config 0x6>;

	gmac-config {
		device = <&gmac>;

		rgmii-gmac0 = <1>;
	};
};

&uart {
	status = "okay";
};

&usb_phy {
	status = "okay";
};

&usb {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	dr_mode = "host";
	vbus-supply = <&reg_usb_vbus>;

	hub@1 {
		compatible = "usb0409,005a";
		reg = <1>;
	};
};

&wmac {
	status = "okay";

	mtd-cal-data = <&art 0x1000>;
	mtd-mac-address = <&config 0x0>;
};
